<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Other_Application_Method_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL ( Application_method__c, &quot;others&quot;),
     ISBLANK(Other_Application_Methods__c) = TRUE )</errorConditionFormula>
    <errorDisplayField>Other_Application_Methods__c</errorDisplayField>
    <errorMessage>Please enter Other Application Method</errorMessage>
</ValidationRule>

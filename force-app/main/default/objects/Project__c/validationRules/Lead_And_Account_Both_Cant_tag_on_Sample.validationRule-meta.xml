<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_And_Account_Both_Cant_tag_on_Sample</fullName>
    <active>false</active>
    <errorConditionFormula>AND( RecordType.DeveloperName = &quot;Sample&quot;, ISBLANK( Account__c ), ISBLANK(Lead__c ))</errorConditionFormula>
    <errorMessage>Sample cannot be created without Lead or Account. Atleast, one should be tagged to a Sample record.</errorMessage>
</ValidationRule>
